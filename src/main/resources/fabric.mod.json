{
  "schemaVersion": 1,
  "id": "overlord",
  "version": "${version}",

  "name": "Overlord",
  "description": "Raise and command an army of skeletons.",
  "authors": [
    "The_Fireplace"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/overlord",
    "sources": "https://github.com/The-Fireplace-Minecraft-Mods/Overlord",
    "issues": "https://github.com/The-Fireplace-Minecraft-Mods/Overlord/issues"
  },

  "license": "MPL-2.0",
  "icon": "assets/overlord/logo.png",

  "environment": "*",
  "entrypoints": {
    "di-main": [
      "dev.the_fireplace.overlord.Overlord"
    ],
    "di-client": [
      "dev.the_fireplace.overlord.client.OverlordClient"
    ]
  },
  "mixins": [
    "overlord.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": ">=0.39.0",
    "minecraft": "1.17.X",
    "fireplacelib": ">=6.0.5 <7"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/QXQYPj5"
      }
    },
    "lithium:options": {
      "mixin.ai.nearby_entity_tracking.goals": false
    }
  }
}
