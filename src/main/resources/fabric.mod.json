{
    "schemaVersion": 1,
    "id": "overlord",
    "version": "${version}",
    "name": "${name}",
    "description": "${description}",
    "authors": [
        "The_Fireplace"
    ],
    "contact": {
        "homepage": "${curseforge_url}",
        "sources": "${github_url}",
        "issues": "${github_url}/issues",
        "modrinth": "${modrinth_url}"
    },
    "license": "MPL-2.0",
    "icon": "assets/overlord/logo.png",
    "environment": "*",
    "entrypoints": {
        "di-main": [
            "dev.the_fireplace.overlord.entrypoints.Main"
        ],
        "di-client": [
            "dev.the_fireplace.overlord.entrypoints.Client"
        ],
        "fireplacelib": [
            "dev.the_fireplace.overlord.entrypoints.ConfigGui"
        ],
        "rei": [
            "dev.the_fireplace.overlord.entrypoints.ReiClient",
            "dev.the_fireplace.overlord.entrypoints.ReiServer"
        ]
    },
  "mixins": [
    "overlord.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.0",
    "fabric": "*",
    "minecraft": "1.16.X",
      "fireplacelib": ">=6.3 <7"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/QXQYPj5"
      }
    },
    "lithium:options": {
        "mixin.ai.nearby_entity_tracking.goals": false,
        "mixin.entity.skip_equipment_change_check": false
    }
  }
}
